  },
  "model": {
    "experiment_id": "0da6f6e9-59ad-4926-bb75-ac8cf5a4063d",
    "variant": "feature_loss_scorer",
    "model_name": "feawad",
    "encoder_type": "vae_full",
    "freeze_encoder": false,
    "pre_training": true,
    "dataset_name": "cardio",
    "input_dim": 21,
    "latent_dim": 64,
    "features": [
      "encoder_output",
      "reconstruction_error",
      "normalized_residual"
    ],
    "encoder": [
      {
        "type": "Input",
        "units": 21,
        "model": "fixed"
      },
      {
        "type": "Dense",
        "units": 21,
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "ain"
      },
      {
        "type": "Dense",
        "units": 128,
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "ae1"
      },
      {
        "type": "Dense",
        "units": "latent_dim",
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "mu"
      },
      {
        "type": "Dense",
        "units": "latent_dim",
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "logvar"
      }
    ],
    "decoder": [
      {
        "type": "Input",
        "units": "latent_dim",
        "model": "fixed"
      },
      {
        "type": "Dense",
        "units": 128,
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "ad1"
      },
      {
        "type": "Dense",
        "units": 21,
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "ad2"
      }
    ],
    "scoring_network": [
      {
        "type": "Input",
        "units": "len(extracted_features)"
      },
      {
        "units": 256,
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "hl2"
      },
      {
        "op": "Concat",
        "inputs": [
          "hl2",
          "sub_norm2"
        ],
        "axis": 1
      },
      {
        "units": 32,
        "activation": "relu",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "hl3"
      },
      {
        "op": "Concat",
        "inputs": [
          "hl3",
          "sub_norm2"
        ],
        "axis": 1
      },
      {
        "units": 1,
        "activation": "linear",
        "initializer": "glorot_normal",
        "use_bias": true,
        "name": "score_output"
      }
    ],
    "loss_function": {
      "name": "multi_loss",
      "description": "Margin-based confidence loss combining inlier, outlier, and reconstruction terms",
      "formula": "(1 - y_true) * (|y_pred| + ||residual||) + y_true * (|max(margin - y_pred, 0)| + |max(margin - ||residual||, 0)|)",
      "hyperparams": {
        "confidence_margin": 5.0
      }
    }
  }
}